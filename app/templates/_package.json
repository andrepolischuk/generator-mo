{
  "name": "<%= name %>",
  "description": "<%= description %>",
  "version": "0.0.0",
  "keywords": [
    ""
  ],
  "repository": "<%= githubUsername %>/<%= name %>",
  "dependencies": {
    <% if (cli) { %>"meow": "^3.3.0"<% } %>
  },
  "devDependencies": {
    "ava": "^0.7.0",
    "babel-cli": "^6.3.15",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "chokidar-cli": "^1.1.0",
    "rimraf": "^2.4.3"
  },
  "main": "index.es5.js",<% if (cli) { %>
  "bin": "cli.es5.js",<% } %>
  "scripts": {
    "pretest": "npm run prepublish",
    "test": "ava",
    "tdd": "chokidar \"*.js\" --ignore \"*.es5.js\" --command \"npm run test\" --initial",
    "prepublish": "babel --presets es2015,stage-0 index.js --out-file index.es5.js<% if (cli) { %> && babel --presets es2015,stage-0 cli.js --out-file cli.es5.js<% } %>",
    "postpublish": "rimraf index.es5.js<% if (cli) { %> cli.es5.js<% } %> && git push --follow-tags"
  },
  "author": "<%= githubName %> <<%= githubEmail %>><% if (githubWebsite) { %> (<%= githubWebsite %>)<% } %>",
  "license": "MIT"
}
